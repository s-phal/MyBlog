


    <div class="container">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                <div class="card bg-white text-dark shadow" style="border-radius: 1rem;">
                    <div class="card-body p-5 text-center">

                        <div class="mb-md-5 mt-md-4">

                            <h2 class="fw-bold mb-2 text-uppercase">Login</h2>
                            <p class="text-dark mb-5">Please enter your login and password!</p>

                            <form method="post" action="/admin/signin/">
                                @Html.AntiForgeryToken()
                                <div class="form-outline form-white mb-4">
                                <input type="email" name="username" class="form-control form-control-lg" />
                                    <label class="form-label" for="typeEmailX">Email</label>
                                </div>

                                <div class="form-outline form-white mb-4">
                                    <input type="password" name="password" class="form-control form-control-lg" />
                                    <label class="form-label">Password</label>
                                </div>

                                <button class="btn btn-primary btn-lg px-5 mb-3" type="submit">Login</button>

                                <br/>


                            @if (ViewData["Error"] != null)
                            {
                            <label class="text-danger">@ViewData["Error"].ToString()</label>
                            }
                            </form>


                        </div>


                    </div>
                </div>
            </div>
        </div>
    </div>
